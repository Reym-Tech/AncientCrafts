<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown">

    <ScrollView
        android:id="@+id/rateScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate Your Purchased Items"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/darkbrown"
                android:layout_marginBottom="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/darkbrown">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pngtree_ornately_carved_wooden_cabinet_featuring_two_doors_with_arch_designs_open_png_image_15890166"
                        android:scaleType="centerCrop"
                        android:background="@color/brown"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/productName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wooden Cabinet"
                            android:textColor="@color/brown"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1"
                            android:rating="0"
                            android:layout_marginTop="8dp"
                            android:isIndicator="false"
                            android:progressTint="@color/brown"
                            android:secondaryProgressTint="@color/brown"/>

                        <EditText
                            android:id="@+id/commentInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Write your review..."
                            android:textColor="@color/brown"
                            android:textColorHint="@color/brown"
                            android:backgroundTint="@color/brown"
                            android:layout_marginTop="8dp"
                            android:minLines="2"
                            android:maxLines="4"
                            android:inputType="textMultiLine"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- You can add multiple cards like above for each product to rate -->

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical|end"
        android:background="@color/darkbrown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/submitRatingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Ratings"
            android:textStyle="bold"
            android:textColor="@color/darkbrown"
            android:backgroundTint="@color/brown"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
