<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown">

    <!-- Your product details or scrollable content -->
    <ScrollView
        android:id="@+id/productScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/addToCartSection">

        <!-- Replace with your actual product layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Product content here -->
        </LinearLayout>
    </ScrollView>

    <!-- Add to Cart Section fixed at the bottom -->
    <LinearLayout
        android:id="@+id/addToCartSection"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/darkbrown"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/favBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/favourite_icon"
            android:backgroundTint="@color/brown"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/cartBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cart"
            android:backgroundTint="@color/brown"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/addToCartBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="Add to Cart"
            android:textColor="@color/darkbrown"
            android:backgroundTint="@color/brown"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="3dp" />

        <Button
            android:id="@+id/buyNowBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Buy Now"
            android:textColor="@color/brown"
            android:backgroundTint="@color/lightbrown"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
