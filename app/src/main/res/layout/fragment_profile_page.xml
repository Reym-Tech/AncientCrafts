<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    tools:context=".fragments.ProfilePage">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/profile_DB"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/darkbrown"
            android:layout_marginBottom="50dp">

            <ImageView
                android:id="@+id/menu_Btn"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:background="@drawable/menu_icon"
                android:backgroundTint="@color/brown"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/baseline_account_circle_24"
                android:backgroundTint="@color/brown"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="60dp"/>

            <TextView
                android:id="@+id/email_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gjohnremy@gmail.com"
                android:textColor="@color/brown"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="65dp"/>

            <TextView
                android:id="@+id/number_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="096*****520"
                android:textColor="@color/brown"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="85dp"/>

            <ImageView
                android:id="@+id/fav_Btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/favourite_icon"
                android:backgroundTint="@color/brown"
                android:layout_alignParentRight="true"
                android:layout_marginRight="115dp"
                android:layout_marginTop="17dp"/>

            <ImageView
                android:id="@+id/cart_Btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cart"
                android:backgroundTint="@color/brown"
                android:layout_alignParentRight="true"
                android:layout_marginRight="65dp"
                android:layout_marginTop="18dp"/>

            <ImageView
                android:id="@+id/message_Btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/message_icon"
                android:backgroundTint="@color/brown"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="17dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/darkbrown"
                app:cardCornerRadius="17dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/mypurchases_Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Purchases"
                        android:paddingLeft="10dp"
                        android:textSize="17sp"
                        android:textColor="@color/brown" />


                    <TextView
                        android:id="@+id/purchaseHistory_Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="View Purchase History"
                        android:paddingLeft="45dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/brown" />

                </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/toPay_Btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/wallet_icon"
                        android:backgroundTint="@color/brown" />

                    <TextView
                        android:id="@+id/toPay_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Pay"
                        android:textSize="15sp"
                        android:textColor="@color/brown"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="92dp"/>

                    <ImageView
                        android:id="@+id/toShip_Btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/package_icon"
                        android:backgroundTint="@color/brown"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="40dp"/>

                    <TextView
                        android:id="@+id/toShip_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Ship"
                        android:textSize="15sp"
                        android:textColor="@color/brown"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="92dp"/>

                    <ImageView
                        android:id="@+id/toReceive_Btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/truck_icon"
                        android:backgroundTint="@color/brown"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="40dp"/>

                    <TextView
                        android:id="@+id/toReceive_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Receive"
                        android:textSize="15sp"
                        android:textColor="@color/brown"
                        android:layout_marginLeft="192dp"
                        android:layout_marginTop="92dp"/>

                    <ImageView
                        android:id="@+id/toRate_Btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/star_icon"
                        android:backgroundTint="@color/brown"
                        android:layout_marginLeft="285dp"
                        android:layout_marginTop="45dp"/>

                    <TextView
                        android:id="@+id/toRate_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Rate"
                        android:textSize="15sp"
                        android:textColor="@color/brown"
                        android:layout_marginLeft="280dp"
                        android:layout_marginTop="92dp"/>

                </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myCoupons_Btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/darkbrown">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/coupons_icon"
                    android:backgroundTint="@color/brown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Coupons"
                    android:textColor="@color/brown"
                    android:textSize="20sp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="5dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/right_arrow_icon"
                        android:backgroundTint="@color/brown"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="360dp"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/redeemCodes_Btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/darkbrown">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/redeem_codes_icon"
                    android:backgroundTint="@color/brown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="5dp"
                    android:text="Redeem Codes"
                    android:textColor="@color/brown"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/right_arrow_icon"
                        android:backgroundTint="@color/brown"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="360dp"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:backgroundTint="@color/darkbrown"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="17dp">
                
                <androidx.cardview.widget.CardView
                    android:id="@+id/ad_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/brown">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="120dp"
                        android:background="@drawable/amish_jericho_cutout_back_dining_chair_removebg_preview__1_"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="LIMITED STOCKS AVAILABLE!"
                        android:textColor="@color/darkbrown"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₱ 750"
                        android:textColor="@color/darkbrown"
                        android:textSize="28sp"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₱ 1,500"
                        android:textColor="@color/darkbrown"
                        android:textSize="19sp"
                        android:layout_marginTop="110dp"
                        android:layout_marginLeft="55dp"/>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:background="@drawable/line_icon"
                        android:layout_marginTop="115dp"
                        android:layout_marginLeft="60dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/percent_off_icon"
                        android:backgroundTint="@color/darkbrown"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="120dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classic Wooden Chair"
                        android:textColor="@color/darkbrown"
                        android:textSize="12sp"
                        android:layout_marginLeft="192dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Sturdy"
                        android:textColor="@color/darkbrown"
                        android:textSize="17sp"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="210dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="70dp"
                        android:text="• Comfortable"
                        android:textColor="@color/darkbrown"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Stylish"
                        android:textColor="@color/darkbrown"
                        android:textSize="17sp"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="210dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Versatile"
                        android:textColor="@color/darkbrown"
                        android:textSize="17sp"
                        android:layout_marginTop="110dp"
                        android:layout_marginLeft="210dp"/>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/dot_icon"
                    android:backgroundTint="@color/brown"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="230dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/dot_icon"
                    android:backgroundTint="@color/brown"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="250dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/dot_icon"
                    android:backgroundTint="@color/brown"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="270dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/dot_icon"
                    android:backgroundTint="@color/lightbrown"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="290dp"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sellBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:strokeColor="@color/darkbrown"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/brown"
                android:layout_marginHorizontal="55dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/btnSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Selling Crafts"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:textColor="@color/darkbrown"
                    android:layout_gravity="center"/>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>