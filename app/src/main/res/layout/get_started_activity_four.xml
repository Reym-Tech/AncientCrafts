<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Image Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/indigenous_person" />

        <!-- Gradient Overlay (updated with visibility improvements) -->
        <View
            android:id="@+id/gradient_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient"
            android:elevation="2dp"
            android:alpha="1.0" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Heritage. \nYour Craft. \nYour Story."
            android:textColor="#FFF8E1"
            android:textSize="47sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Inspirational Quote -->
        <TextView
            android:id="@+id/quote_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handcrafted heritage, timeless tradition"
            android:textColor="#FFF8E1"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:alpha="10"
            android:fontFamily="sans-serif-light"
            android:shadowColor="#FFF8E1"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10" />
    </RelativeLayout>

    <!-- Bottom Brown Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#3E2723">

        <!-- Large Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LETâ€™S"
                android:textColor="#FFF8E1"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET"
                android:textColor="#FFF8E1"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STARTED"
                android:textColor="#FFF8E1"
                android:textSize="50sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Arrow Button -->
        <ImageButton
            android:id="@+id/next_button_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:background="@drawable/btn_circle"
            android:contentDescription="Start"
            android:scaleType="centerInside"
            android:src="@drawable/next_arrow"
            app:tint="#F1E7C6" />
    </RelativeLayout>
</LinearLayout>
