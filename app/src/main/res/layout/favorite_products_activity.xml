<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    tools:context=".FavoriteProducts">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Title Section -->
        <TextView
            android:id="@+id/favTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Favorite Products"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/lightbrown"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Favorite Products CardView Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/darkbrown"
            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <!-- ImageView for the first product -->
                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pngtree_ornately_carved_wooden_cabinet_featuring_two_doors_with_arch_designs_open_png_image_15890166"
                    android:layout_alignParentStart="true"
                    android:contentDescription="Product Image" />

                <!-- Product Title -->
                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wooden Cabinet"
                    android:textSize="16sp"
                    android:textColor="@color/brown"
                    android:layout_toEndOf="@id/productImage"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentTop="true" />

                <!-- Product Price -->
                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚±1000"
                    android:textSize="14sp"
                    android:textColor="@color/brown"
                    android:layout_toEndOf="@id/productImage"
                    android:layout_marginStart="20dp"
                    android:layout_below="@id/productName" />

                <!-- Add to Cart Button -->
                <ImageView
                    android:id="@+id/cartBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/cart"
                    android:contentDescription="Add to Cart" />

                <!-- Add to Favorites Button -->
                <ImageView
                    android:id="@+id/favBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:src="@drawable/heart_icon"
                    android:contentDescription="Add to Favorites" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- RecyclerView for listing favorite products -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/linear"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
