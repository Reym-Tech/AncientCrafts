<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbrown"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/profileRLOut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/logo"/>

            <TextView
                android:paddingTop="30dp"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in to explore craftsmanship."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="305dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Email"
                android:textColorHint="@color/darkbrown"
                android:inputType="textEmailAddress"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="305dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Password"
                android:textColorHint="@color/darkbrown"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/forgot_Pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:text="Forgot Password?"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="305dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/darkbrown"
                android:text="Sign in"
                android:textColor="@color/lightbrown"
                android:textSize="22sp"
                app:cornerRadius="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="------------OR------------"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/darkbrown"/>

            <LinearLayout
                android:paddingTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/fb_Btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/fblogo" />

                <ImageView
                    android:id="@+id/google_Btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/googlelogo" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvRegisterLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Don't have an account? Register here"
                android:textColor="#0000FF"
                android:textSize="17dp"
                android:clickable="true"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="15dp"
                    android:textAlignment="center"
                    android:text="By registering, you agree with our Terms of Service and Privacy Policy"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
