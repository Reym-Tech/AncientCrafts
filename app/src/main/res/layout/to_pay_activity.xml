<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toPayLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/brown"
    tools:context=".ToPayActivity">

    <!-- Title Section -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items To Pay"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/darkbrown"
        android:layout_marginBottom="12dp"/>

    <!-- RecyclerView showing list of orders -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewToPay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- Footer with total price and Pay Now button -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@color/darkbrown">

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â‚±0.00"
            android:textSize="18sp"
            android:textColor="@color/brown"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnProceedToPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:textStyle="bold"
            android:textColor="@color/darkbrown"
            android:backgroundTint="@color/brown"/>
    </LinearLayout>
</LinearLayout>
