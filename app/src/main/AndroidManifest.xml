<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/splashy"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splashy"
        android:supportsRtl="true"
        android:theme="@style/Theme.AncientCrafts"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".AddProductActivity"
            android:exported="false" />
        <activity
            android:name=".Splashie"
            android:exported="true"
            android:theme="@style/splash" />
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".GetStartedActivity"
            android:exported="false" />
        <activity
            android:name=".GetStartedActivityTwo"
            android:exported="false" />
        <activity
            android:name=".GetStartedActivityThree"
            android:exported="false" />
        <activity
            android:name=".GetStartedActivityFour"
            android:exported="false" />
        <activity
            android:name=".ProductView"
            android:exported="false" />
        <activity
            android:name=".SellerPage"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Splashscreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>